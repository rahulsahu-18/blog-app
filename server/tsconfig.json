{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,

    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "sourceMap": true,
    "lib": ["es2015"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
